{
  "name": "dancing-goat-website",
  "version": "0.0.0",
  "description": "Landing page for fictional coffee shop `the dancing goat`",
  "main": "index.js",
  "author": "Jason McLaren <17043524+jrmclaren@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "watch:js": "npx babel --no-babelrc js/script.precomp.js --presets=es2015  --out-file js/script.js --source-maps --watch",
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "devserver": "live-server --browser='Google Chrome'",
    "start": "npm-run-all --parallel devserver watch:sass watch:js",
    "compile:js": "npx babel js/ --out-dir build/js/",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.comp.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "live-server": "^1.2.0",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.2",
    "npx": "^10.2.0",
    "postcss": "^6.0.22"
  }
}
